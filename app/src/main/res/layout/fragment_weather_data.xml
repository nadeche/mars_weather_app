<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mprog.nl.mars_weather_explorer.WeatherDataFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roverImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/weatherDataGrid"
        android:columnCount="4"
        android:rowCount="5">

        <TextView
            style="@style/TextBox"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/martian_sol"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_curiosity"/>
        <TextView
            style="@style/TextBox"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/earth_date"
            android:textSize="11sp"
            android:layout_columnWeight="1"
            android:drawableStart="@drawable/ic_earth"/>
        <TextView
            style="@style/TextBox"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/sun_rise"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_sunrise"/>
        <TextView
            style="@style/TextBox"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/sun_set"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_sunset"/>
        <TextView
            style="@style/TextBox.NoMarginBottom"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/season"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_calender"/>
        <TextView
            style="@style/TextBox.RightSpace"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/solDateTextView"/>
        <TextView
            style="@style/TextBox.RightSpace"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/earthDateTextView"
            android:layout_columnWeight="1"/>
        <TextView
            style="@style/TextBox.RightSpace"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/sunriseTextView"/>
        <TextView
            style="@style/TextBox.RightSpace"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/sunsetTextView" />
        <TextView
            style="@style/TextBox.RightSpace.NoMarginBottom"
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/seasonTextView" />

        <TextView
            style="@style/TextBox.LeftSpace"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/max_temp"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_sun"/>
        <TextView
            style="@style/TextBox.LeftSpace"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/min_temp"
            android:textSize="11sp"
            android:layout_columnWeight="1"
            android:drawableStart="@drawable/ic_moon"/>
        <TextView
            style="@style/TextBox.LeftSpace"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/wind"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_wind"/>
        <TextView
            style="@style/TextBox.LeftSpace"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/pressure"
            android:textSize="11sp"
            android:paddingEnd="5dp"
            android:drawableStart="@drawable/ic_pressure"/>
        <TextView
            style="@style/TextBox.LeftSpace.NoMarginBottom"
            android:layout_column="2"
            android:layout_row="4"
            android:text="@string/status"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_weather_status"/>
        <TextView
            style="@style/TextBox"
            android:layout_column="3"
            android:layout_row="0"
            android:id="@+id/maxTempTextView" />
        <TextView
            style="@style/TextBox"
            android:layout_column="3"
            android:layout_row="1"
            android:id="@+id/minTempTextView"
            android:layout_columnWeight="2"/>
        <TextView
            style="@style/TextBox"
            android:layout_column="3"
            android:layout_row="2"
            android:id="@+id/windSpeedTextView" />
        <TextView
            style="@style/TextBox"
            android:layout_column="3"
            android:layout_row="3"
            android:id="@+id/pressureTextView" />
        <TextView
            style="@style/TextBox.NoMarginBottom"
            android:layout_column="3"
            android:layout_row="4"
            android:id="@+id/statusTextView" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        style="@style/TextBox"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_above="@id/weatherDataGrid"
        android:id="@+id/photoTitleTextView" />
</RelativeLayout>
