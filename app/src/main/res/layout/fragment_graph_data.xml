<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dialog_margin"
    android:paddingBottom="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/graphTitle"
        android:text="@string/graph_title"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/temperatureLineGraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/graphTitle"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_axis_title"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/dotUnselected"/>

    <mprog.nl.mars_weather_explorer.VerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yAxisTitle"
        android:textSize="10sp"
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dp"
        android:textColor="@color/dotUnselected"/>
</RelativeLayout>